# EditorConfig is awesome: https://EditorConfig.org

root = true

[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{js,yml}]
indent_style = space
indent_size = 2

[*.scss]
indent_style = space
indent_size = 2

[Makefile]
indent_style = tab

[package.json]
indent_style = space
indent_size = 2
